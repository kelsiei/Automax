@model IEnumerable<CarCareTracker.Models.GasRecord.GasRecord>

@{
    ViewData["Title"] = "Gas History";
    var vehicle = ViewBag.Vehicle as CarCareTracker.Models.Vehicle.Vehicle;
}

<h1>Gas History</h1>

@if (vehicle != null)
{
    <p>
        <strong>Vehicle:</strong>
        @vehicle.Year @vehicle.Make @vehicle.Model (@vehicle.LicensePlate)
    </p>
}

<p>
    <a asp-action="Create"
       asp-route-vehicleId="@(vehicle?.Id ?? 0)"
       class="btn btn-primary">
        Add Gas Entry
    </a>
    <a asp-controller="Vehicle"
       asp-action="Index"
       class="btn btn-secondary">
        Back to Garage
    </a>
</p>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">No gas records have been recorded for this vehicle yet.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Odometer</th>
                <th>Volume</th>
                <th>Price / Unit</th>
                <th>Total Cost</th>
                <th>Full Fill-Up</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Date.ToShortDateString()</td>
                <td>@r.Odometer</td>
                <td>@r.Volume</td>
                <td>@r.PricePerUnit</td>
                <td>@r.TotalCost</td>
                <td>
                    @if (r.IsFullFillUp)
                    {
                        <span class="badge bg-success">Full</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Partial</span>
                    }
                </td>
                <td>@r.Notes</td>
                <td class="text-end">
                    <a asp-action="Edit"
                       asp-route-id="@r.Id"
                       class="btn btn-sm btn-outline-secondary">
                        Edit
                    </a>
                    <form asp-action="Delete"
                          asp-route-id="@r.Id"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this gas entry?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

