@model CarCareTracker.Models.PlanRecord.PlanRecord

@{
    ViewData["Title"] = "Edit Plan";
    var vehicle = ViewBag.Vehicle as CarCareTracker.Models.Vehicle.Vehicle;
}

<h1>Edit Plan</h1>

@if (vehicle != null)
{
    <p>
        <strong>Vehicle:</strong>
        @vehicle.Year @vehicle.Make @vehicle.Model (@vehicle.LicensePlate)
    </p>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="VehicleId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Priority" class="form-label"></label>
                <select asp-for="Priority"
                        class="form-select"
                        asp-items="Html.GetEnumSelectList<CarCareTracker.Enum.PlanPriority>()">
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Progress" class="form-label"></label>
                <select asp-for="Progress"
                        class="form-select"
                        asp-items="Html.GetEnumSelectList<CarCareTracker.Enum.PlanProgress>()">
                </select>
                <span asp-validation-for="Progress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PlannedDate" class="form-label"></label>
                <input asp-for="PlannedDate" class="form-control" />
                <span asp-validation-for="PlannedDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EstimatedCost" class="form-label"></label>
                <input asp-for="EstimatedCost" class="form-control" />
                <span asp-validation-for="EstimatedCost" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsArchived" class="form-check-input" />
                <label asp-for="IsArchived" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index"
               asp-route-vehicleId="@Model.VehicleId"
               class="btn btn-secondary">
                Cancel
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

