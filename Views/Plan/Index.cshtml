@model IEnumerable<CarCareTracker.Models.PlanRecord.PlanRecord>

@{
    ViewData["Title"] = "Plans";
    var vehicle = ViewBag.Vehicle as CarCareTracker.Models.Vehicle.Vehicle;
}

<h1>Plans</h1>

@if (vehicle != null)
{
    <p>
        <strong>Vehicle:</strong>
        @vehicle.Year @vehicle.Make @vehicle.Model (@vehicle.LicensePlate)
    </p>
}

<p>
    <a asp-action="Create"
       asp-route-vehicleId="@(vehicle?.Id ?? 0)"
       class="btn btn-primary">
        Add Plan
    </a>
    <a asp-controller="Vehicle"
       asp-action="Index"
       class="btn btn-secondary">
        Back to Garage
    </a>
</p>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">
        No plans have been added yet for this vehicle. Use <strong>Add Plan</strong> to schedule upcoming work.
    </p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Description</th>
                <th>Type</th>
                <th>Priority</th>
                <th>Progress</th>
                <th>Planned Date</th>
                <th>Estimated Cost</th>
                <th>Archived</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Description</td>
                <td>@p.Type</td>
                <td>@p.Priority</td>
                <td>@p.Progress</td>
                <td>@(p.PlannedDate.HasValue ? p.PlannedDate.Value.ToShortDateString() : "")</td>
                <td>@(p.EstimatedCost.HasValue ? p.EstimatedCost.Value.ToString("C") : "")</td>
                <td>
                    @if (p.IsArchived)
                    {
                        <span class="badge bg-secondary">Archived</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </td>
                <td class="text-end">
                    <a asp-action="Edit"
                       asp-route-id="@p.Id"
                       class="btn btn-sm btn-outline-secondary">
                        Edit
                    </a>
                    <form asp-action="Delete"
                          asp-route-id="@p.Id"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this plan?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
