@model IEnumerable<CarCareTracker.Models.ServiceRecord.ServiceRecord>

@{
    ViewData["Title"] = "Service History";
    var vehicle = ViewBag.Vehicle as CarCareTracker.Models.Vehicle.Vehicle;
}

<h1>Service History</h1>

@if (vehicle != null)
{
    <p>
        <strong>Vehicle:</strong>
        @vehicle.Year @vehicle.Make @vehicle.Model (@vehicle.LicensePlate)
    </p>
}

<p>
    <a asp-action="Create"
       asp-route-vehicleId="@(vehicle?.Id ?? 0)"
       class="btn btn-primary">
        Add Service Record
    </a>
    <a asp-controller="Vehicle"
       asp-action="Index"
       class="btn btn-secondary">
        Back to Garage
    </a>
</p>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">No service records have been recorded for this vehicle yet.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Odometer</th>
                <th>Cost</th>
                <th>Vendor</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Date.ToShortDateString()</td>
                <td>@r.Description</td>
                <td>@r.Odometer</td>
                <td>@r.Cost</td>
                <td>@r.Vendor</td>
                <td></td>
                <td class="text-end">
                    <a asp-action="Edit"
                       asp-route-id="@r.Id"
                       class="btn btn-sm btn-outline-secondary">
                        Edit
                    </a>
                    <form asp-action="Delete"
                          asp-route-id="@r.Id"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this service record?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

