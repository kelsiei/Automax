@model IEnumerable<CarCareTracker.Models.Reminder.ReminderRecord>

@{
    ViewData["Title"] = "Reminders";
    var vehicle = ViewBag.Vehicle as CarCareTracker.Models.Vehicle.Vehicle;
}

<h1>Reminders</h1>

@if (vehicle != null)
{
    <p>
        <strong>Vehicle:</strong>
        @vehicle.Year @vehicle.Make @vehicle.Model (@vehicle.LicensePlate)
    </p>
}

<p>
    <a asp-action="Create"
       asp-route-vehicleId="@(vehicle?.Id ?? 0)"
       class="btn btn-primary">
        Add Reminder
    </a>
    <a asp-controller="Vehicle"
       asp-action="Index"
       class="btn btn-secondary">
        Back to Garage
    </a>
    <a asp-action="Calendar"
       class="btn btn-outline-secondary btn-sm ms-2">
        Calendar view
    </a>
    <a asp-action="CalendarFeed"
       class="btn btn-outline-secondary btn-sm ms-2">
        Download iCal
    </a>
</p>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">
        No reminders have been added yet for this vehicle. Use <strong>Add Reminder</strong> to create one.
    </p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Description</th>
                <th>Metric</th>
                <th>Due Date</th>
                <th>Due Odometer</th>
                <th>Urgency</th>
                <th>Completed</th>
                <th>Tags</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Description</td>
                <td>@r.Metric</td>
                <td>@(r.DueDate.HasValue ? r.DueDate.Value.ToShortDateString() : "")</td>
                <td>@(r.DueOdometer.HasValue ? r.DueOdometer.Value.ToString() : "")</td>
                <td>@r.Urgency</td>
                <td>
                    @if (r.IsCompleted)
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Open</span>
                    }
                </td>
                <td>@r.Tags</td>
                <td class="text-end">
                    <a asp-action="Edit"
                       asp-route-id="@r.Id"
                       class="btn btn-sm btn-outline-secondary">
                        Edit
                    </a>
                    <form asp-action="Delete"
                          asp-route-id="@r.Id"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this reminder?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
